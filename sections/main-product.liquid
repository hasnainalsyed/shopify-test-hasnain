{% comment %}
  This section is used in the product template to render product page with
  media, content, and add-to-cart form.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/product
{% endcomment %}

{{ 'main-product.css' | asset_url | stylesheet_tag: preload: true }}

<script src="{{ 'main-product-gallery.js' | asset_url }}" defer></script>
<script src="{{ 'main-product.js' | asset_url }}" defer></script>

<product-info
  id="MainProduct-{{ section.id }}"
  data-section="{{ section.id }}"
  data-product-id="{{ product.id }}"
  data-update-url="true"
  data-url="{{ product.url }}"
  data-product-info-main="true"
>
  <div class="main-product__product-info-wrapper">
    <div class="main-product__product-gallery">
      <!-- Main Image -->
      <div class="main-product__product-gallery-main">
        {% assign first_image = product.featured_image %}
        <img
          src="{{ first_image | image_url: width: 800, height: 800 }}"
          alt="{{ first_image.alt | escape }}"
          width="{{ first_image.width }}"
          height="{{ first_image.height }}"
          loading="eager"
          data-product-gallery-main-image="true"
          class="main-product__product-gallery-main-image"
        >
      </div>

      <!-- Thumbnails -->
      <div class="main-product__product-gallery-thumbs-wrapper">
        <div class="main-product__product-gallery-thumbs" data-product-gallery-thumbs="true">
          {% for image in product.images %}
            <img
              class="main-product__product-gallery-thumb{% if product.featured_image == image %} main-product__product-gallery-thumb--active{% endif %}"
              src="{{ image | image_url: width: 150, height: 150 }}"
              data-full="{{ image | image_url: width: 800, height: 800 }}"
              alt="{{ image.alt | escape }}"
              width="{{ image.width }}"
              height="{{ image.height }}"
              loading="lazy"
              data-product-gallery-thumb="true"
            >
          {% endfor %}
        </div>
      </div>
    </div>

    <div class="main-product__product-info">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'product-category' %}
            {% if product.category != blank %}
              <div class="main-product__product-category">
                {{ product.category }} / <span class="main-product__product-category-title">{{ product.title }}</span>
              </div>
            {% endif %}

          {% when 'product-title' %}
            <h1 class="main-product__product-title">
              {{ product.title }}
              {% if block.settings.show_product_price %}
                - {{ product.price | money }}
              {% endif %}
            </h1>

          {% when 'product-description' %}
            {% if product.description != blank %}
              <div class="main-product__product-description">
                {{ product.description }}
              </div>
            {% endif %}

          {% when 'quantity-selector' %}
            {% render 'quantity-selector', product: product %}

          {% when 'variant-picker' %}
            {% render 'variant-picker', product: product %}

          {% when 'buy-buttons' %}
            {% render 'buy-buttons', product: product %}

          {% when 'delivery-and-returns' %}
            {% render 'delivery-and-returns', block: block %}
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</product-info>

<script type="application/json" id="ProductMetafields-{{ section.id }}">
  {
    "variants": {
      {% for variant in product.variants %}
        "{{ variant.id }}": {
          "variant_images": [
            {% if variant.metafields.custom.variant_images.value %}
              {% for image in variant.metafields.custom.variant_images.value %}
                "{{ image | image_url: width: 2000 }}"{% unless forloop.last %},{% endunless %}
              {% endfor %}
            {% endif %}
          ]
        }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    }
  }
</script>

{% schema %}
{
  "name": "t:general.product",
  "settings": [],
  "blocks": [
    {
      "type": "product-category",
      "name": "Product category",
      "limit": 1
    },
    {
      "type": "product-title",
      "name": "Product title",
      "limit": 1,
      "settings": [
        {
          "type": "checkbox",
          "id": "show_product_price",
          "label": "Show product price",
          "default": true
        }
      ]
    },
    {
      "type": "product-description",
      "name": "Product description",
      "limit": 1
    },
    {
      "type": "quantity-selector",
      "name": "Quantity selector",
      "limit": 1
    },
    {
      "type": "variant-picker",
      "name": "Variant picker",
      "limit": 1
    },
    {
      "type": "buy-buttons",
      "name": "Buy buttons",
      "limit": 1
    },
    {
      "type": "delivery-and-returns",
      "name": "Delivery and returns",
      "settings": [
        {
          "type": "header",
          "content": "Delivery"
        },
        {
          "type": "text",
          "id": "delivery_title",
          "label": "Delivery title"
        },
        {
          "type": "richtext",
          "id": "delivery_content",
          "label": "Delivery content"
        },
        {
          "type": "image_picker",
          "id": "delivery_icon",
          "label": "Delivery icon"
        },
        {
          "type": "header",
          "content": "Returns"
        },
        {
          "type": "text",
          "id": "returns_title",
          "label": "Returns title"
        },
        {
          "type": "richtext",
          "id": "returns_content",
          "label": "Returns content"
        },
        {
          "type": "image_picker",
          "id": "returns_icon",
          "label": "Returns icon"
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}
